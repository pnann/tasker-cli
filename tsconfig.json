{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "lib": [
      "ES2015.promise"
    ],
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}